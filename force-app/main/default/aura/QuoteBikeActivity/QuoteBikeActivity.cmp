<aura:component
  controller="QuoteBikeActivityController"
  implements="force:appHostable,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes"
  access="global"
>
  <aura:attribute name="data" type="List" access="global" />
  <aura:attribute name="columns" type="List" access="global"/>
  <aura:attribute name="listEmail" type="List" access="global"/>

  <force:recordData
    recordId="{! v.recordId }"
    targetFields="{! v.objOpportunity}"
    fields="RecordType.Name"
  />

  <aura:handler name="init" value="{! this }" action="{! c.init }" />
  <lightning:card title="List Activity">
    <lightning:datatable
      hideCheckboxColumn="true"
      keyField="Id"
      columns="{!v.columns }"
      data="{!v.data}"
    >
    </lightning:datatable>
  </lightning:card>
</aura:component>