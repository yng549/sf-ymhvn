<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Lock_Record</fullName>
    <active>true</active>
    <errorConditionFormula>AND(PRIORVALUE(Is_Lock__c) == true,  ISCHANGED(Is_Lock__c) == false)</errorConditionFormula>
    <errorMessage>This record is locked</errorMessage>
</ValidationRule>
