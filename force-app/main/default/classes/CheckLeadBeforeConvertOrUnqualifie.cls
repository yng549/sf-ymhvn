    public static void onBeforeUpdate(Map<Id, Lead> mapLeadOlds, Map<Id, Lead> mapLeadNews){
		Set<Id> lstLead = new Set<Id>();
        Map<Id, Lead> mapLead = new Map<Id, Lead>();
		for (Lead item : mapLeadNews.values()){
			if (item.Status != mapLeadOlds ?.get(item.Id) ?.Status){
                if((item.Status == 'Unqualified' 
                    && item.Close_Lead_Reason__c != Null) || item.Status == 'Converted' || item.IsConverted) {
                    //item.addError('Currently');
                    mapLead.put(item.Id, item);
                    lstLead.add(item.Id);
                } else if(item.Status == 'Unqualified' && item.Close_Lead_Reason__c == Null) {
                    item.addError('Currently, Field name Close Lead Reason is not value.');
                }
			}
		}
        System.debug('lstLead :' + lstLead);
		if (!lstLead.isEmpty()){
			updateTaskComplete(lstLead, mapLead);
		}
	}


    private static void updateTaskComplete(Set<Id> lstLead, Map<Id, Lead> mapLead) {
        try {
            List<Lead> lstLeadUpdate = new List<Lead>();
            List<User>  objUserMarketting = new List<User>();
            objUserMarketting = gerUserMarketting();
            List<Task> lstTaskUpdate = new List<Task>();
            List<Lead> lstLeadQuerry = getLstLead(lstLead);
            Map<Id, Task> mapTaskWithLead = mapTaskWithLead(lstLead);
            Map<Id, Task> mapLeadWithTask = new Map<Id, Task>();
            for(Task item : mapTaskWithLead.values()) {
                mapLeadWithTask.put(item.WhoId_Tempt__c, item);
            }
            for(Lead item : lstLeadQuerry) {
                if(!item.Is_Duplicated_Lead__c) {
                    if(mapLeadWithTask.containsKey(item.Id)) {
                        if(String.isBlank(mapLeadWithTask.get(item.Id).Comment__c) || mapLeadWithTask.get(item.Id).Comment__c.length() < 80) {
                            mapLead.values().get(0).addError('Having a task open, user have to fill in Comment".');
                        }
                        //if(item.Estimate_Task__c >= dt) {
                        if(!mapLeadWithTask.get(item.Id).Is_Close__c) {
                            mapLeadWithTask.get(item.Id).Status = 'Completed';
                            mapLeadWithTask.get(item.Id).Is_Close__c = true;
                            lstTaskUpdate.add(mapLeadWithTask.get(item.Id));
                        }
                        item.Is_Close__c = true;
                        if(item.Status == 'Unqualified') {
                            if(!objUserMarketting.isEmpty()) {
                                item.OwnerId = objUserMarketting[0].Id;
                            }
                        }
                    }
                }
            }
            System.debug('lstTaskUpdate' + lstTaskUpdate);
            if(!lstTaskUpdate.isEmpty()) {
                update lstTaskUpdate;
            }
        } catch (Exception ex){
            System.debug('Exception e ' + ex.getMessage() + ' ' + ex.getLineNumber());
		}
    }

    

    private static List<Lead> getLstLead(Set<Id> lstLead){
        List<Lead> lstLeadQuerry = [SELECT Id
                                        , Status
                                        , Is_Close__c
                                        , OwnerId
                                        , Is_Duplicated_Lead__c
                                    FROM Lead
                                    WHERE Id IN: lstLead];
		return lstLeadQuerry;
	}

    //Vì khi convert task sẽ chuyển sang cho oppty ne6n querry lòng sẽ ko dùng đc trong trường hợp này
    private static Map<Id, Task> mapTaskWithLead(Set<Id> setIdLead) {
        return new Map<Id, Task>([SELECT Id
                                          , WhoId
                                          , Comment__c
                                          , Status
                                          , Is_Close__c
                                          , Task_Name__c
                                          , Estimate_Task__c
                                          , WhoId_Tempt__c
                                  FROM Task
                                  WHERE Status =: 'In Processing'
                                  	AND WhoId_Tempt__c IN: setIdLead]);
    }

