public with sharing class scheduleOrderBike Implements Schedulable{
    private static String FOLLOWFAIL_ORDER = Schema.SObjectType.Follow_Fail__c.getRecordTypeInfosByDeveloperName()
                .get('Follow_Fail_Order')
                .getRecordTypeId();
	
	public void execute(SchedulableContext sc){
		getTask();
	}

	public void getTask(){
		try {
            User objUserMarketting = gerUserMarketting();
            Map<Id,User> objUserSalesManager = gerUserSalesManager();
            Map<Id,User> objAllUser = mapGetAllUser();
            List<Follow_Fail__c> lstFollowFail = new List<Follow_Fail__c>();
			List<Order> lstOrderQuerry = getLstOrder();
			List<Order> lstOrderUpdate = new List<Order>();
			List<Task> lstTaskUpdate = new List<Task>();
			List<Task> lstTaskInsert = new List<Task>();
			for (Order item : lstOrderQuerry){
				if (!item.Tasks.isEmpty()){
					for (Task obj : item.Tasks){
						if (obj.ActivityDate < System.today()){
                            Follow_Fail__c objFollowFail = new Follow_Fail__c();
                            objFollowFail.RecordTypeId = FOLLOWFAIL_ORDER;
                            objFollowFail.Order__c  = item.Id;
                            objFollowFail.Status__c = 'New';
                            objFollowFail.Consultant__c = item.OwnerId;
                            objFollowFail.Account__c = item.AccountId;
                            obj.Status = 'Not Completed';
                            obj.Is_Close__c = true;
                            if(item.Flow_Fouls__c == 0) {
                                item.Flow_Fouls__c = item.Flow_Fouls__c + 1;
                                objFollowFail.OwnerId = item.OwnerId;
                                
                                Task taskClone = obj.clone(false, false, false, false);
                                taskClone.Subject = 'Delivery Bike';
                                taskClone.Status = 'In Processing';
                                taskClone.Id = null;
                                taskClone.Is_Close__c = false;
                                taskClone.Estimate_Task__c = System.today().addDays(10);
                                taskClone.ActivityDate = Date.valueOf(taskClone.Estimate_Task__c);
                                lstOrderUpdate.add(item);
                                lstTaskInsert.add(taskClone);
                            } else if (item.Flow_Fouls__c == 1) {
                                item.Flow_Fouls__c = item.Flow_Fouls__c + 1;
                                if(item.Is_Payment__c) {
                                    String strDODLManagerOnUser = objAllUser.get(item.OwnerId).DODL_Manager__c;
                                    //item.OwnerId = strDODLManagerOnUser;
                                    objFollowFail.OwnerId = String.isNotBlank(strDODLManagerOnUser) ? strDODLManagerOnUser : item.OwnerId;
                                    
                                } else {
                                    //item.OwnerId = objUserMarketting.Id;
                                    objFollowFail.OwnerId = objUserMarketting.Id;
                                }
                                lstOrderUpdate.add(item);
                            }
                            
                            lstFollowFail.add(objFollowFail);
                            lstTaskUpdate.add(obj);
						}
					}
				}
			}
            System.debug('lstFollowFail :' + lstFollowFail);
            System.debug('lstTaskInsert :' + lstTaskInsert);
            System.debug('lstTaskUpdate :' + lstTaskUpdate);
            System.debug('lstOrderUpdate :' + lstOrderUpdate);
            if(!lstFollowFail.isEmpty()) {
 				insert lstFollowFail;
			}
			if(!lstTaskInsert.isEmpty()) {
				insert lstTaskInsert;
			}

			if (!lstTaskUpdate.isEmpty()){
				update lstTaskUpdate;	
			}
			if(!lstOrderUpdate.isEmpty()) {
				update lstOrderUpdate;
				System.debug('lstOrderUpdate :' + lstOrderUpdate);
			}
			
			if(!lstTaskInsert.isEmpty()) {
				Map<Id, Order> mapOrder = new Map<Id, Order>([SELECT Id, OwnerId FROM Order WHERE ID IN: lstOrderUpdate]);
				for(Task item : lstTaskInsert) {
					if(mapOrder.containsKey(item.WhatId)) {
						item.OwnerId = mapOrder?.get(item.WhatId)?.OwnerId;
					}
				}
				update lstTaskInsert;
			}
		} catch(Exception ex) {
			System.debug('ex :' + ex.getMessage() + ' ' + ex.getLineNumber());
		}
	}

	private static Map<Id, User> mapGetAllUser() {
		Map<Id, User> mapUser = new Map<Id, User> ([SELECT Id , DODL_Manager__c FROM USer WHERE IsActive =: true]);
		return mapUser;
	}

	private static List<Order> getLstOrder(){
		return new List<Order>([SELECT Id
                                		, Is_Payment__c
                                		, OwnerId
										, Product__c
                                		, Product__r.Bike_cc__c
                                		, RecordTypeId
                                		, Status
                                		, Flow_Fouls__c
                                		, AccountId
                                		, (SELECT Id
                                           		, Task_Name__c
                                           		, ActivityDate
                                           		, Status
                                           		, Is_Close__c
                                           		, WhatId
                                           		, WhoId
                                           		, OwnerId
                                          FROM Tasks
                                          WHERE Is_Close__c =: false
											AND Status !=: 'Closed'
                                          	AND Status !=: 'Not Completed'
                                          	AND Status !=: 'Completed'
                                          LIMIT 1)
                                FROM Order 
                                WHERE RecordTypeId =: RecordTypeHelper.ORDER_BIKE
                               		AND Status !=: 'Completed'
                               		AND Status !=: 'Closed'
                               		AND Status !=: 'Cancle']);
	}
    
	private static User gerUserMarketting(){
		return [Select Id, Name
		        From User
		        Where Profile.Name = 'MKT Manager'];
	}

	private static Map<Id,User> gerUserSalesManager(){
		return new Map<Id, User>([Select Id, Name
		        From User
		        Where Profile.Name = 'Community DO DL Manager']);
	}
