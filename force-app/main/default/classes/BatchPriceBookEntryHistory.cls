public without sharing class BatchPriceBookEntryHistory extends BaseBatchHandler {
  public static Boolean flagRun = false;
  public String dynamicQuery;

  public String productPCA;
  public String priceBookType;

  public BatchPriceBookEntryHistory() {
    this.objectName = 'PricebookEntry';
    productPCA = RecordTypeHelper.PRODUCT_PCA;
    priceBookType = 'PCAService';
    // dynamicQuery = 'SELECT {0} FROM {1} WHERE {2} GROUP BY {3}';
  }
  public override Database.querylocator start(Database.BatchableContext BC) {
    Schema.SObjectType sobjectType = Schema.getGlobalDescribe().get(objectName);
    Map<String, Schema.SObjectField> schemaFieldMap = sobjectType.getDescribe()
      .fields.getMap();

    List<String> query = new List<String>();
    query.add('SELECT Id,Product2Id,Product2.Name , UnitPrice, Old_Price__c,ProductCode,Pricebook2Id ');
    query.add('FROM ' + objectName);
    query.add(
      'WHERE Pricebook2.Type__c = :priceBookType AND IsActive = true'
    );

    if (Test.isRunningTest()) {
      query.add('LIMIT 200');
    }
    return Database.getQueryLocator(String.join(query, ' '));
  }

  public override List<SObject> processData(List<SObject> records) {
    List<PricebookEntry> newData = (List<PricebookEntry>) records;
    createPriceBookEntryHistory(newData);
    return newData;
  }

  private void createPriceBookEntryHistory(List<PricebookEntry> newData) {
    List<Price_Book_Entry_History__c> lstInsertPriceBookEntryHistory = new List<Price_Book_Entry_History__c>();
    List<PricebookEntry> lstUpdateOldPrice = new List<PricebookEntry>();
    
    for (PricebookEntry PbE : newData){
        if (PbE.Old_Price__c != PbE.UnitPrice){
            Price_Book_Entry_History__c PbEHistory = new Price_Book_Entry_History__c();
            PbEHistory.Name = PbE.Product2.Name + ' ' + System.today().addDays(-1).format();
            PbEHistory.Old_Price__c = PbE.Old_Price__c;
            PbEHistory.New_Price__c = PbE.UnitPrice;
            PbEHistory.Product__c = PbE.Product2Id;
            PbEHistory.Price_Book__c = PbE.Pricebook2Id;
            PbEHistory.Date__c = System.today().addDays(-1);
            lstInsertPriceBookEntryHistory.add(PbEHistory);

            // add update
            PbE.Old_Price__c = PbE.UnitPrice;
            lstUpdateOldPrice.add(PbE);
        }
    }
    insert lstInsertPriceBookEntryHistory;
    update lstUpdateOldPrice;
  }

