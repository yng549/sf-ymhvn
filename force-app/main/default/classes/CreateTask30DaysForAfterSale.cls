public with sharing class CreateTask30DaysForAfterSale {

    @AuraEnabled
	public static ApiResponse init(String  recordId) {
		ApiResponse apiResponse = new ApiResponse();
        List<Task> lstTask = new List<Task>();
        try {
            lstTask = [SELECT Id FROM Task WHERE WhatId =: recordId AND (Status =: 'In Processing' OR Status =: 'Open')];
            if(apiResponse.error == Null) {
                apiResponse.success = true;
                apiResponse.result = lstTask;
            }
            return apiResponse;
		} catch (Exception ex) {
			apiResponse.error = ex.getMessage();
            return apiResponse;
		}
	}

    @AuraEnabled
	public static ApiResponse createTask30DaysForAfterSale(String strComment, String  recordId) {
		ApiResponse apiResponse = new ApiResponse();
        System.debug('@@@@:');
        System.debug('recordId:' + recordId);
        Order_Account__c objAfterSale = [SELECT Id
                                                , Account__c
                                                , Account__r.PersonContactId
                                                , OwnerId
                                                , Order__r.Product__r.Bike_cc__c
                                                , RecordTypeId
                                        FROM Order_Account__c
                                        WHERE Id =: recordId];
        System.debug('objAfterSale:' + objAfterSale);
        try {
            Task task = new Task();
            task.WhatId = recordId;
            task.WhoId = objAfterSale.Account__r.PersonContactId;
            task.Subject = 'Follow up After Sale Bike';
            task.Status = 'In Processing';
            task.Is_Close__c = false;
            task.RecordTypeId = RecordTypeHelper.TASK_AFTERSALE;
            task.Task_Type__c = 'Follow up';
            task.Task_Name__c = '30 Days';
            task.Comment__c = strComment;
            task.Estimate_Task__c = Datetime.now().addDays(30);
            task.ActivityDate = Date.today().addDays(30);
            insert task;
            System.debug('task:' + task);
            if(apiResponse.error == Null) {
                apiResponse.success = true;
            }
            return apiResponse;
		} catch (Exception ex) {
			apiResponse.error = ex.getMessage() + ex.getLineNumber();
            return apiResponse;
		}
	}
    
