    @AuraEnabled
    public static ApiResponse getQuoteByOpportunityId (String strOpportuntiyID) {
        ApiResponse apiResponse = new ApiResponse();
        try {
            Quote objQuote = [
                SELECT   Id
                        , OpportunityId
                        , Voucher_Amount__c
                        , Promotion_Item__c
                FROM   Quote
                WHERE  OpportunityId =: strOpportuntiyID
                    AND IsSyncing =: true];
            System.debug('objQuote : ' + objQuote);
            if(objQuote.Id == Null) {
                apiResponse.error = 'Quote Syncing not exits.';
                return apiResponse;
            }
            if(apiResponse.error == Null) { 
                apiResponse.success = true;
                apiResponse.result = objQuote;
            }
            return apiResponse;
        } catch(Exception ex) {
            apiResponse.error = ex.getMessage();
            return apiResponse; 
        }
    }

    @AuraEnabled
    public static ApiResponse getPromotionByRecordTypeVoucher (String strOrderID) {
        try {
            ApiResponse apiResponse = new ApiResponse();

            Order objOrder = [
                SELECT   Id
                        , OpportunityId
                        , Opportunity.SyncedQuoteId
                        , Opportunity.SyncedQuote.Voucher_Amount__c
                        , Opportunity.SyncedQuote.Promotion_Item__c
                FROM   Order
                WHERE  Id =: strOrderID
                    AND Opportunity.SyncedQuote.Voucher_Amount__c > 0 
                    AND Opportunity.SyncedQuote.Voucher_Amount__c != Null];
            if(objOrder != Null) {
                apiResponse.success = true;
                apiResponse.result = objOrder;
            }
            return apiResponse;
        } catch(Exception ex) {
            throw new AuraHandledException('There are no records that match the condition');
        }
    }

