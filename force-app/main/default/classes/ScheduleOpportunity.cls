public class ScheduleOpportunity Implements Schedulable{

	public void execute(SchedulableContext sc){
		getTask();
	}
	

	public void getTask(){
        List<Opportunity> lstOpportunityQuerry = new List<Opportunity>();
		List<Opportunity> lstOpportunityUpdate = new List<Opportunity>();
		List<Task> lstTaskUpdate = new List<Task>();
		User objUserMarketting = gerUserMarketting();
    	Map<Id, User> objUserSaleManager = gerUserSaleManager();
		List<Follow_Fail__c> lstFollowFail = new List<Follow_Fail__c>();
		String FOLLOW_ACCOUNT = Schema.SObjectType.Follow_Fail__c.getRecordTypeInfosByDeveloperName()
											.get('Follow_Fail_Account')
											.getRecordTypeId();
		Map<Id, User> objAllUser = getAllUser();									
		try {
			lstOpportunityQuerry = getLstOppty();
			for (Opportunity item : lstOpportunityQuerry){
				if(!item.Tasks.isEmpty()) {
					for(Task obj : item.Tasks) {
						if (!obj.Is_Close__c 
							&& obj.Status == 'In Processing' 
							&& obj.ActivityDate < System.today()){
							obj.Status = 'Not Completed';
							obj.Is_Close__c = true;
							Follow_Fail__c objFollowFail = new Follow_Fail__c();
							objFollowFail.RecordTypeId = FOLLOW_ACCOUNT;
							objFollowFail.Opportunity__c = item.Id;
							objFollowFail.Account__c = item.AccountId;
							objFollowFail.Status__c = 'New';
							objFollowFail.OwnerId = item.OwnerId;
							objFollowFail.Consultant__c = item.OwnerId;
                            if(item.RecordTypeId == RecordTypeHelper.OPPORTUNITY_BIKE) {
                                if(item.Flow_Fouls__c == 0 
                                || item.Flow_Fouls__c == 1) { 
                                    if(item.Flow_Fouls__c == 0) {
                                        item.Flow_Fouls__c = 1;
                                    } else {
                                        item.Flow_Fouls__c = 2;
                                    }
                                    if(String.isNotBlank(item.DO_DL_Owner__c)) {
                                        objFollowFail.OwnerId = item.DO_DL_Owner__c;
                                    }
                                } else if(item.Flow_Fouls__c == 2) {
                                    item.Flow_Fouls__c = 3;
                                    if(objAllUser.containsKey(item.OwnerId)) {
                                        objFollowFail.OwnerId = gerUserMarketting().Id;
                                    }
                                } else if(item.Flow_Fouls__c == 3) {
                                    item.Flow_Fouls__c = 4;
                                    item.StageName = 'Closed Lost';
                                }    
                            } else if(item.RecordTypeId == RecordTypeHelper.OPPORTUNITY_PCA){
                                objFollowFail.OwnerId = item.OwnerId;    
                            }
							// when block 1. Khi Lead đang có task in Processing 1h mà vượt quá thời gian estimate của task thì close task và tạo 1 task 6h
							lstFollowFail.add(objFollowFail);	
							lstTaskUpdate.add(obj);
						}
					}
					lstOpportunityUpdate.add(item);
				}
			}
			System.debug('lstFollowFail' + lstFollowFail);
			System.debug('lstTaskUpdate' + lstTaskUpdate);
			System.debug('lstOpportunityUpdate' + lstOpportunityUpdate);
			if(!lstFollowFail.isEmpty()) {
				insert lstFollowFail;
			}
			if (!lstTaskUpdate.isEmpty()){
				update lstTaskUpdate;	
			}
			if(!lstOpportunityUpdate.isEmpty()) {
				update lstOpportunityUpdate;
			}
			// Update OwnerId khi Oppty trả về cho Sale Manager tức là DO D
			
		} catch (Exception ex) {
			System.debug('ex.getMessage() :' + ex.getMessage());
			System.debug('ex.getLineNumber() :' + ex.getLineNumber());
            lstOpportunityQuerry.get(0).addError(ex.getMessage() + ' ' + ex.getLineNumber());
		}
	}

	private static List<Opportunity> getLstOppty(){
		return new List<Opportunity>([SELECT Id
											, StageName
											, Is_Close__c
											, OwnerId
											, DO_DL_Owner__c
											, Flow_Fouls__c
											, AccountId
											, (SELECT Id
													, Is_Close__c
													, Status
													, Task_Name__c
													, ActivityDate
													, RecordTypeId
												FROM Tasks
												WHERE Status !=: 'Closed'
													AND Status !=: 'Not Completed'
                                               		AND Status !=: 'Completed'
													AND Is_Close__c =: false
												LIMIT 1)
									FROM Opportunity
									WHERE Is_Close__c =: false 
										AND StageName !=: 'Closed Won' 
										AND StageName !=: 'Closed Lost'
                                     	AND (RecordTypeId =: RecordTypeHelper.OPPORTUNITY_BIKE
                                     		OR RecordTypeId =: RecordTypeHelper.OPPORTUNITY_PCA)]);
	}

	
	private static User gerUserMarketting(){
		return [Select Id, Name
		        From User
		        Where Profile.Name = 'MKT Manager'
                LIMIT 1];
	}

	private static Map<Id, User> getAllUser(){
		Map<Id, User> mapGetAllUser = new Map<Id, User>([SELECT Id, DODL_Manager__c,AccountId, ContactId, ProfileId
		                                                 FROM User]);
		return mapGetAllUser;
	}

    private static Map<Id, User> gerUserSaleManager(){
		return new Map<Id, User>([SELECT	Id, Name, Profile.Name
								  FROM		User
								  WHERE 	Profile.Name =:  'Community DO DL Manager']);
	}
