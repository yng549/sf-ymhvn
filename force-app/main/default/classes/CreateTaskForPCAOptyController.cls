    @AuraEnabled
    public static ApiResponse createTaskPCAForOppty(String strInputRange, String strRecordId, String strNameObject){
        ApiResponse apiResponse = new ApiResponse();
        try{
            Date dateInput = Date.today();
            
            if(dateInput.addDays(Integer.valueOf(strInputRange)) < Date.today()) {
                apiResponse.error = 'Due date must greater than date time now.';
                return apiResponse;
            }
            Task task = new Task();
            if(strNameObject == 'Opportunity') {
                task.Subject = 'Follow Up PCA Opportunity';
                //objTask.WhoId = objOppty.AccountId;
                task.RecordTypeId = RecordTypeHelper.TASK_OPPORTUNITY;
            } else if(strNameObject == 'Order') {
                task.Subject = 'Follow Up PCA Order';
                //objTask.WhoId = objOppty.AccountId;
                task.RecordTypeId = RecordTypeHelper.TASK_ORDER;
            }
            task.Type = 'Call';
            task.Status = 'In Processing';
            task.Priority = 'High';
            task.Task_Type__c = 'Follow Up';
            task.ActivityDate = Integer.valueOf(strInputRange) > 0 
                                        ? dateInput.addDays(Integer.valueOf(strInputRange)) 
                                        : dateInput;
            task.Task_Name__c = Integer.valueOf(strInputRange) > 1 ? strInputRange + ' Days' :     strInputRange + ' Day';                      
            task.OwnerId =  Userinfo.getUserId();                           
            
            task.WhatId = strRecordId;
            insert task;
            if(apiResponse.error == null) {
                apiResponse.success = true;
            } 
            return apiResponse;
            
        }catch(Exception e){
            throw new AuraHandledException('ERROR 404:' + e.getMessage()); 
        }
    }
