    private static void checkAvailableInStock(Set<Id> setIdLeadCheckInventory) {
       try {
         Map<Id, User> mapUserSale = new Map<Id, User>([SELECT Id
                                                         		, Name
                                                         		, AccountId
                                                        		, Account.Warehouse_Location__c
