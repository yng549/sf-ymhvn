    public static void flowTrueOpportunity(String strIdOpp){
		try{
            if (task168HoursFollow.isEmpty()) return;
            
			List<String> fields = new List<String>(Task.SObjectType.getDescribe().fields.getMap().keySet());
			string soql = ' SELECT ' + String.join(fields, ',') + ' FROM Task'; 
            soql +=	' WHERE Id IN: lstTaskUpdate';
            
			List<Task> lstTasksUpset = new List<Task>();
            
			Map<Id, Progress_Flow_Details__c> mapOpportunityForFlowDetail = new Map<Id, Progress_Flow_Details__c>();
			List<Opportunity> lstOppUpdate = new List<Opportunity>();
			for (Task item : Database.query(soql)) {
				Task taskClone = item.clone(false, true, false, false);
				taskClone.Status = 'In Processing';
				taskClone.Subject = 'Opportunity Task (7 days)';
				taskClone.OwnerId = item.OwnerId;
				taskClone.Estimate_Task__c = Datetime.now().addHours(168);
				taskClone.ActivityDate = Date.valueOf(taskClone.Estimate_Task__c);
				taskClone.Task_Name__c = '168 hours';
                item.put('Is_Close__c', true);
				mapOpportunityForFlowDetail.put(item.WhatId, task168HoursFollow[0]);
				lstTasksUpset.add(item);
				lstTasksUpset.add(taskClone);
			}
            update lstTasksUpset;
            
			for (Opportunity item : [SELECT ID, Progress_Flow_Details__c, Progress_Flow_Details__r.Name
                                     FROM Opportunity WHERE Id IN :mapOpportunityForFlowDetail.keySet()]){
				if (mapOpportunityForFlowDetail.containsKey(item.Id)) item.Progress_Flow_Details__c = mapOpportunityForFlowDetail.get(item.Id).Id;
				lstOppUpdate.add(item);
			}
            update lstOppUpdate;
		} catch (Exception e){
            logError('CreateTask7DaysForOpp.flowTrueOpportunity', e.getMessage() + e.getLineNumber(), '', '', '');
            System.debug('Exception e '+ e + e.getLineNumber());
		}
	}
