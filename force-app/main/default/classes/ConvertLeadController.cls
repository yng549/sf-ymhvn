public class ConvertLeadController {
    private static Map<Id, User> objAllUser = getAllUser();
    
    @AuraEnabled
    public static ApiResponse getInitialData(Id recordId){
        ApiResponse apiResponse = new ApiResponse(true);

        ValidateResult validateResult = validateRequestData(recordId);
        
        apiResponse.result = validateResult;

        return apiResponse;
    }
    @AuraEnabled
    public static void saveEdited(string email, string phone, Id recordId){
        Lead l = new Lead(Id = recordId);
        l.Email = email;
        l.MobilePhone = phone;
        update l;      
    }
    @AuraEnabled
    public static ApiResponse convertLead(Id recordId){
        ApiResponse apiResponse = new ApiResponse();
        ConvertResult convertResult = new ConvertResult();
		List<Lead_Opportunity_Open__c> lstLeadOpptyOpen = new List<Lead_Opportunity_Open__c>();
        ValidateResult validateResult = validateRequestData(recordId);
        List<OpportunityTeamMember> lstOpptyTeam = new List<OpportunityTeamMember>();
        
        try{
            List<Opportunity> lstOpptyUpdate = new List<Opportunity>();
            String strLeadType = '';
            Lead[] objLeadDup = [SELECT Id
                                    , Phone
                                    , MobilePhone
                                    , Is_Close__c
                                    , Passing_Unqualified__c 
                                    , Status
                               FROM Lead
                               WHERE OwnerId =: UserInfo.getUserId() 
                                    AND Status =: 'Unqualified' 
                                    AND (Phone =: validateResult.lead.Phone 
                                         OR MobilePhone =: validateResult.lead.MobilePhone)];
            
            Lead currentLead = validateResult.lead;
            strLeadType = currentLead.Lead_Type__c;
            system.debug(currentLead);
            Database.LeadConvert lc = new Database.LeadConvert();
            lc.setLeadId(recordId);
            
            LeadStatus ls = [SELECT Id, MasterLabel, IsConverted 
                             FROM LeadStatus WHERE IsConverted = TRUE LIMIT 1];
        	lc.setConvertedStatus(ls.MasterLabel);
            
            if(currentLead.Lead_Type__c == 'Bike' || currentLead.Lead_Type__c == 'PCA') {
                lc.setOpportunityName(validateResult.lead.Name);
            } else if(currentLead.Lead_Type__c == 'Service') {
                lc.setDoNotCreateopportunity(TRUE);
            }
            Database.LeadConvertResult lcr = Database.convertLead(lc);
            convertResult.convertedAccount = lcr.getAccountId();
            convertResult.newOpportunity = lcr.getOpportunityId();
            if(currentLead.Lead_Type__c == 'Bike') {
                lstOpptyUpdate.add(new Opportunity(
                    Id = convertResult.newOpportunity
                    , Product__c = validateResult.lead.Product__c
                    , RecordTypeId = RecordTypeHelper.OPPORTUNITY_BIKE));
            } else if(currentLead.Lead_Type__c == 'PCA') {
                lstOpptyUpdate.add(new Opportunity(
                    Id = convertResult.newOpportunity
                    , RecordTypeId = RecordTypeHelper.OPPORTUNITY_PCA));
            }
            
            if(!lstOpptyUpdate.isEmpty()) {
                update lstOpptyUpdate;
            }
            if((objAllUser.get(validateResult.lead.OwnerId).DODL_Manager__c == objAllUser.get(UserInfo.getUserId()).DODL_Manager__c)
               && String.isNotBlank(objAllUser.get(validateResult.lead.OwnerId).DODL_Manager__c)
               && String.isNotBlank(objAllUser.get(UserInfo.getUserId()).DODL_Manager__c)
               && currentLead.Lead_Type__c == 'Bike') {
                   if(validateResult.lead.OwnerId != UserInfo.getUserId() && !objLeadDup.isEmpty()) {
                       System.debug('objLeadDup'+objLeadDup[0]);
                       if(!validateResult.lead.Is_Close__c) {
							lstOpptyTeam.add(new OpportunityTeamMember(
                                OpportunityId = lcr.getOpportunityId(),
                                OpportunityAccessLevel = 'Edit',
                                TeamMemberRole = 'Sales Rep',
                                UserId  =  UserInfo.getUserId()
                            ));                            
                       }
                   }
            }
            System.debug('lstOpptyTeam:'+lstOpptyTeam);
            if(!lstOpptyTeam.isEmpty()) {
               	 System.debug('lstOpptyTeam:'+lstOpptyTeam);
                 insert lstOpptyTeam;
            }
            if(validateResult.lead != Null) {
                update validateResult.lead;
            }
            if(objLeadDup != Null) {
                update objLeadDup;
            }
            if(!lstLeadOpptyOpen.isEmpty()) {
                insert lstLeadOpptyOpen;
            }
            apiResponse.result = convertResult;
            apiResponse.success = true;
            return apiResponse;
        } catch(Exception ex){
            apiResponse.addError(ex.getMessage() + ' ' + ex.getLineNumber());
            return apiResponse;
        }
    }
    
    private static Map<Id, User> getAllUser(){
		Map<Id, User> mapGetAllUser = new Map<Id, User>([SELECT Id, DODL_Manager__c,AccountId, ContactId, ProfileId
		                                                 FROM User]);
		return mapGetAllUser;
	}
    
    private static ValidateResult validateRequestData(Id recordId){
        ValidateResult result = new ValidateResult();
		
        List<Lead> listLead = [
            SELECT Id, Lead_Type__c, Name, Is_Close__c, Status, Phone, MobilePhone , Email, Product__c, Product__r.Name, OwnerId, Passing_Unqualified__c
            FROM Lead
            WHERE Id = :recordId
        ];
		
        if(listLead.isEmpty()){
            throw new AuraHandledException('Invalid lead id');
        }
        
		if(listLead[0].Status == 'Unqualified'){
            throw new AuraHandledException('This lead is already unqualified');
        }
        
        if(listLead[0].Status == 'Converted'){
            throw new AuraHandledException('This lead is already converted');
        }
		result.editMode = false;
        result.lead = listLead[0];
        return result;
    }

    private class ConvertResult {
        @AuraEnabled
        public Id convertedAccount {get;set;}
        @AuraEnabled
        public Id newOpportunity {get;set;}
        
    }
    private class ValidateResult {
        @AuraEnabled
        public Lead lead {get;set;}
        @AuraEnabled
        public Boolean editMode {get;set;}
    }
