  public static ApiResponse cloneOrderAndItem(String jsonOrderDTO) {
    ApiResponse apiResponse = new ApiResponse();
    try {
        OrderDTO orderDTO = (OrderDTO) System.JSON.deserialize(jsonOrderDTO, OrderDTO.class);
        System.debug(orderDTO);
        if (orderDTO.AccountId == null){
            apiResponse.error = 'Account is required!!';
            return apiResponse;
        }

        if (orderDTO.OrderStartDate == null){
