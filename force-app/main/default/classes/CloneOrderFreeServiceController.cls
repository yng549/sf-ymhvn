    }
  }

  private static List<OrderItem> getLstOrderProductByOrderId(String recordId) {
    // Get the Map of Schema of OrderItem SObject
    Schema.SObjectType sobjectType = Schema.getGlobalDescribe()
      .get('OrderItem');
    Map<String, Schema.SObjectField> fieldMap = sobjectType.getDescribe()
      .fields.getMap();

    // Get all of the fields on the object
    Set<String> setFieldNames = fieldMap.keySet();
    list<String> lstFieldNames = new List<String>(setFieldNames);

    // Dynamic Query String.
    List<OrderItem> lstOrderItem = new List<OrderItem>();
    lstOrderItem = Database.query(
      'SELECT Product2.Name, ' +
      String.join(lstFieldNames, ',') +
      ' FROM OrderItem WHERE OrderId = :recordId'
    );
    return lstOrderItem;
  }
