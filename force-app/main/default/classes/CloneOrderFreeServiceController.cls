  public static ApiResponse getInitialData(String recordId) {
    ApiResponse apiResponse = new ApiResponse();
    try {
      Order order = getOrderById(recordId);
    //   Order cloneOrder = order.clone(false);
      List<OrderItem> lstOrderItem = getLstOrderProductByOrderId(recordId);
      OrderDTO orderDTO = new OrderDTO(order, lstOrderItem);
      if (orderDTO != null) {
        apiResponse.result = orderDTO;
        apiResponse.success = true;
      }
      return apiResponse;
    } catch (Exception e) {
      throw new AuraHandledException(e.getMessage());
    }
  }

