            return apiResponse;
        }
        if (orderDTO.Status == null){
            apiResponse.error = 'Status is required!!';
            return apiResponse;
        }
      Order orderInsert = new Order();
      List<OrderItem> lstOrderItemInsert = new List<OrderItem>();
      orderInsert.Id = null;
      orderInsert.RecordTypeId = orderDTO.RecordTypeId;
      orderInsert.AccountId = orderDTO.AccountId;
      orderInsert.Mileage__c = orderDTO.MileageIn;
      orderInsert.Mileage_Out__c = orderDTO.MileageOut;
      orderInsert.DO_DL__c = orderDTO.DODL; //DO_DL__c
      orderInsert.Cashier__c = orderDTO.ServiceConsultant; //Cashier__c
      orderInsert.Status = orderDTO.Status; //Status
      orderInsert.EffectiveDate = orderDTO.OrderStartDate; //EffectiveDate
      orderInsert.Mechanic__c = orderDTO.Mechanic; //Mechanic__c
      orderInsert.Asset__c = orderDTO.Asset; //Asset__c
      orderInsert.Detailing_Staff__c = orderDTO.DetailingStaff; //Detailing_Staff__c
      orderInsert.Request_From__c = orderDTO.RequestFrom; //Request_From__c
      orderInsert.Approval_Status__c = orderDTO.ApprovalStatus; //Approval_Status__c
      orderInsert.Request_Description__c = orderDTO.RequestDescription; //Request_Description__c

      insert orderInsert;
      for (OrderItem OI : orderDTO.lstOrderItem) {
        OI.Id = null;
        OI.OrderId = orderInsert.Id;
        lstOrderItemInsert.add(OI);
