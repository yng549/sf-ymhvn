    private static List<Order_Account__c> getOrderAccountQuerry(Set<Id> setIdOrder){
        List<String> fields = new List<String>(Order_Account__c.SObjectType.getDescribe().fields.getMap().keySet());
        String soql = '' + 
               ' SELECT Owner.ProfileId , Order__r.Product__r.Bike_cc__c , Account__r.PersonContactId,  ' + String.join(fields, ',') + ' FROM Order_Account__c' + 
               ' WHERE Id IN: setIdOrder';

        List<Order_Account__c> lstOrderQuerry = (Order_Account__c[])Database.query(soql);
        return lstOrderQuerry;
    }

    private static List<Task> getlstTask(){
        List<Task> lstTaskQuerry = [SELECT Id, Status, Is_Close__c, WhatId, WhoId
                                    FROM Task
                                    WHERE Status != 'Closed' OR Status != 'Not Completed'];
        return lstTaskQuerry;
    }

    private static void checkOrderHasTask(List<Task> LstTaks, Map<Id, List<Task>> mapIdParentToLstChild){
		for (Task item : LstTaks){
			if (mapIdParentToLstChild.containsKey(item.WhatID)){
				List<Task> lstTaskChild = mapIdParentToLstChild.get(item.WhatID);
				lstTaskChild.add(item);
				mapIdParentToLstChild.put(item.WhatID, lstTaskChild);
			} else{
				mapIdParentToLstChild.put(item.WhatID, new List<Task>{item});
			}
		}
	}

    private static Task createTask(Order_Account__c item) {
        Task objTask = new Task();
        objTask.Type = 'Other';
        objTask.Status = 'In Processing';
        objTask.Priority = 'High';
        objTask.Subject = 'After Sale 1 Day Reassign';
        objTask.WhatId = item.Id;
        objTask.WhoId = item.Account__r.PersonContactId;
        objTask.OwnerId = item.OwnerId;
        objTask.RecordTypeId = RecordTypeHelper.TASK_AFTERSALE;
        objTask.Task_Name__c = '1 Day Reassign';
        objTask.Estimate_Task__c = Datetime.now().addHours(24);
        objTask.ActivityDate = Date.valueOf(objTask.Estimate_Task__c);
        return objTask;
    }
