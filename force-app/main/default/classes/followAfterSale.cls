    public static void onAfterUpdate(Map<Id, Order_Account__c> mapOrderAccOlds, Map<Id, Order_Account__c> mapOrderAccNews){
        List<Order_Account__c> lstOrderAcc = new List<Order_Account__c>();
        for (Order_Account__c item : mapOrderAccNews.values()){
            if ((item.OwnerId != mapOrderAccOlds?.get(item.Id)?.OwnerId)){
                lstOrderAcc.add(item);
            }
        }
        if (!lstOrderAcc.isEmpty()){
            updateOwner(lstOrderAcc);
        }
    }

    private static void updateOwner(List<Order_Account__c> lstOrder){
        try {
            Set<id> setIdOrder = new Set<Id>();
            Map<Id, Task> mapOrderTask = new Map<Id, Task>();
            for (Order_Account__c item : lstOrder){
                setIdOrder.add(item.Id);
            }
            List<Order_Account__c> lstOrderQuerry = getOrderAccountQuerry(setIdOrder);
            Map<Id, List<Task>> mapIdParentToLstChild = new Map<Id, List<Task>>();
            if (!lstOrderQuerry.isEmpty()){
                List<Task> lstTask = getlstTask();
                if (!lstTask.isEmpty()){
                    checkOrderHasTask(lstTask, mapIdParentToLstChild);
                    for (Order_Account__c item : lstOrderQuerry){
                        if (objProfileSale.containsKey(item.Owner.ProfileId)){
                            Boolean flagInProcessing = false;
                            if (!mapIdParentToLstChild.containsKey(item.Id)){
                                mapOrderTask.put(item.Id, createTask(item));
                            } else{
                                for (Task objTask : mapIdParentToLstChild.get(item.Id)){
                                    if (objTask.Status == 'In Processing' && !objTask.Is_Close__c){
                                        flagInProcessing = true;
                                        break;
                                    }
                                }
                                if (!flagInProcessing){
                                    mapOrderTask.put(item.Id, createTask(item));
                                }
                            }
                        }
                    }
                }
                if (!mapOrderTask.values().isEmpty()){
                    update lstOrderQuerry;
                    insert mapOrderTask.values();
                }
            }
        } catch(exception ex) {
            System.debug('Exception error message : ' + ex.getMessage() + ' ' + ex.getLineNumber());
        }
    }

