@RestResource(urlMapping='/APILead/*')
global without sharing class APILead {
    // Error code definition : {error code => http status code, error message}
    private static final Map<String, errDef> err = new Map<String, errDef> {
        'SUCCESS'                   => new errDef(200, 'Success'),
        'PARAM_NOTFULLNAME'     	=> new errDef(400, 'Name of lead is required'),
        'PARAM_NOTPHONECONTACT'  	=> new errDef(400, 'Phone contact is required'),
        'PARAM_NOTCODEDODL'  		=> new errDef(400, 'Dealer code is required'),
        'PARAM_NOTPRODUCTCARE'      => new errDef(400, 'Products of interest is required'),
        'ERROR_EXCEPTION'           => new errDef(500, 'Exception occured')
    };
    // http request 
    private static RestRequest req = RestContext.request;
    private static RestResponse res = RestContext.response;
    private static requestBody reqBody = new requestBody();
    private static responseBody resBody = new responseBody();
    private static Lead lead = new Lead();
    @HttpPost
    global static void Run() {
        try {
             reqBody = (requestBody)JSON.deserialize(req.requestBody.toString(), requestBody.class);
            // Check parameters - full name's lead
            if (String.isBlank(reqBody.lName) && String.isBlank(reqBody.fName)) {
                createResponse('PARAM_NOTFULLNAME');
                return;
            }
            // Check parameters - phone contact
            if (String.isBlank(reqBody.phone)) {
                createResponse('PARAM_NOTPHONECONTACT');
                return;
            }
            // Check parameters - phone contact
            if (String.isBlank(reqBody.productInterest)) {
                createResponse('PARAM_NOTPRODUCTCARE');
                return;
            }
            // Check parameters - phone contact
            if (String.isBlank(reqBody.dealer)) {
                createResponse('PARAM_NOTCODEDODL');
                return;
            }
            createLeadFromWebToLead(reqBody);
            // Create a success response.
            createResponse('SUCCESS');
            return;
        }catch(Exception ex) {
            createResponse('ERROR_EXCEPTION', ex);
            return;
        }
    }
    private static Lead createLeadFromWebToLead(requestBody reqBody) {
        lead.Run_Reassign__c = (reqBody.isReassign != null && !reqBody.isReassign) ? false :true;
        lead.Enable_Round_Robin__c = (reqBody.isRoundRobin != null && !reqBody.isRoundRobin) ? false :true;
        lead.Color_bikes__c = reqBody.colorBikes;
        if(string.isNotBlank(reqBody.fName)) lead.Lastname = reqBody.fName;
        if(string.isNotBlank(reqBody.lName)) lead.Lastname = reqBody.lName;
        lead.FirstName = reqBody.fName;
        lead.Product_Name__c = reqBody.productname;
        lead.MobilePhone = reqBody.phone;
        lead.Email = reqBody.email;
        lead.Address_No__c = reqBody.addressNo;
        lead.Province_Code__c  = reqBody.province;
        lead.District_Code__c  = reqBody.district;
        lead.Product_Interest__c  = reqBody.productInterest;
        lead.Lead_Type__c  = reqBody.leadType;
        lead.DO_DL_Code__c = reqBody.dealer;
        lead.LeadSource = 'Landing Page';
		insert lead;
        return lead;
    }
    private static void createResponse(String code) {
		createResponse(code, null);
	}

    private static void createResponse(String code, Exception ex) {
        if (lead.Id != null) {
            resBody.messageLead = lead.Id;
        }
        resBody.responseMessage = err.get(code).errMessage;
		if (ex != null) {
			resBody.responseMessage += ' - ' + ex.getMessage();
		}
        res.addHeader('Access-Control-Allow-Origin', '*');
        res.addHeader('Content-Type', 'application/json');     
        res.statusCode = err.get(code).statusCode;
        res.responseBody = Blob.valueOf(JSON.Serialize(resBody));
    }
