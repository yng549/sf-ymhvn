	@AuraEnabled
    public static ApiResponse createQuote(String optyId)
    {
        ApiResponse api = new ApiResponse();

		Date dateToday = Date.today();
        
        try
        {
            Opportunity opty = [Select Id,Product__c,OwnerId from Opportunity where Id =: optyId];
            
            List<Product2> listProduct = [Select Id from Product2 where Id =: opty.Product__c];
            
            PriceBook2 pricebook = [Select Id,Type__c,From__c,To__c from PriceBook2 where Type__c = 'Bike' and From__c <=: dateToday  
                                    and To__c >=: dateToday and IsActive = true];
            if(listProduct.size() > 0)
            {
                PricebookEntry priceBookEntry = [Select Id,UnitPrice,Pricebook2Id  from PricebookEntry where Product2Id =: listProduct[0].Id 
                                                 and Pricebook2Id =: pricebook.Id];
                
                List<Quote> listQuote = [Select Id,Name from Quote where OpportunityId =: optyId Order By CreatedDate DESC];
                
                DateTime today = DateTime.now();
                String formattedToday = today.formatGMT('ddMMyyyy');
                String quoteNameFormat = '-';            
                
                
                if(listQuote.size() > 0 && (listQuote[0].Name.split('-'))[1] == 'A')
                {
                    quoteNameFormat += 'B';
                }
                else
                {
                    quoteNameFormat += 'A';
                }            
                
                Quote q = new Quote();
                q.RecordTypeId = RecordTypeHelper.QUOTE_SALES_BIKE;
                q.Name = formattedToday + quoteNameFormat ;
                q.Pricebook2Id = pricebook.Id;
                q.OpportunityId = opty.Id;     
                insert q;           
                
                QuoteLineItem item = new QuoteLineItem();
                item.QuoteId = q.Id;
                item.Quantity = 1;
                item.UnitPrice = priceBookEntry.UnitPrice;
                item.PricebookEntryId = priceBookEntry.Id;
                insert item;
                
                api.success = true;
                api.result = q.Id;
            }
            else
            {
                api.error = 'Product on opportunity missing';
            }           
        }
        catch(Exception e)
        {
            system.debug(e.getMessage() + ',' + e.getLineNumber());
            api.error = e.getMessage() + ',' + e.getLineNumber();
            if(e.getLineNumber() == 18)
            {
                api.error = 'Product missing price book entry';
            }
        }       
        
        return api;
    }
    
