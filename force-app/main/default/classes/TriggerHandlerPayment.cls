    public static void onBeforeInsert(List<Payment__c> payments) {
        Set<String> setDODL = new Set<String>();
        Set<String> setOppty = new Set<String>();
        for(Payment__c item : payments){
            if(item.Opportunity__c != null){
                setOppty.add(item.Opportunity__c);
            }
        }
        Map<Id,Opportunity> mapOpty = new Map<Id,Opportunity>([SELECT Id, DODL_Create__c FROM Opportunity WHERE Id IN :setOppty]);
        for(Payment__c item : payments){
            if(mapOpty.containsKey(item.Opportunity__c)){
                if(mapOpty.get(item.Opportunity__c).DODL_Create__c != null){
                    setDODL.add(mapOpty.get(item.Opportunity__c).DODL_Create__c);
                }
            }
        }
        setPaymentNumber(payments,setDODL, mapOpty);
    }
    
    private static void setPaymentNumber(List<Payment__c> payments, Set<String> setDODL, Map<Id,Opportunity> mapOpty){
        integer Month = Date.today().month();
        String MonthNo = String.valueOf(Month);
        if( Month < 10 ) MonthNo = '0' + String.valueOf(Month);
        integer Year = Date.today().year();
        List<User> lstUserHN = [SELECT Id, AccountId FROM User WHERE Account.Name =: 'REVZONE YAMAHA MOTOR HA NOI'];
        for(String dodlId : setDODL){
            String dodlName = '';
            if(lstUserHN[0].AccountId == dodlId) dodlName = 'HN-';
            integer IndexTestRide = 0 ;
            List<Payment__c > lstPaymentNo = [SELECT PaymentNo__c  FROM Payment__c WHERE PaymentNo__c  > 0 AND 
                                            Opportunity__r.DODL_Create__c = :dodlId AND
                                            CALENDAR_MONTH(convertTimezone(CreatedDate)) =: Month AND CALENDAR_YEAR(convertTimezone(CreatedDate)) =: Year
                                            ORDER BY PaymentNo__c DESC LIMIT 1] ;
            if(lstPaymentNo.size() > 0 ){
                IndexTestRide = lstPaymentNo[0].PaymentNo__c .intValue();
            }
            for(Payment__c item : payments){
                if(mapOpty.containsKey(item.Opportunity__c) && mapOpty.get(item.Opportunity__c).DODL_Create__c == dodlId){
                    IndexTestRide +=1;
                    item.PaymentNo__c = IndexTestRide;
                    String PaymentType = 'NH';
                    if(item.Payment_Term__c == 'Cash') PaymentType = 'TM';
                    else if(item.Payment_Term__c == 'POS') PaymentType = 'CT'; 
                    else if(item.Payment_Term__c == 'Voucher') PaymentType = 'VC';
                    else if(item.Payment_Term__c == 'MegaPay') PaymentType = 'MG';
                    // 2022-12-12 Bổ sung phương thức thanh toán - https://beunik.atlassian.net/browse/YMVN-734
                    else if(item.Payment_Term__c == 'Tiki') PaymentType = 'TK';
                    else if(item.Payment_Term__c == 'Momo') PaymentType = 'MO';
                    else if(item.Payment_Term__c == 'VNPAY') PaymentType = 'VP';
                    else if(item.Payment_Term__c == 'Trả góp') PaymentType = 'TG';
                    String IndexTestRideNo = String.valueOf(IndexTestRide);
                    if(IndexTestRide < 10){
                        IndexTestRideNo = '000' + String.valueOf(IndexTestRide);
                    }
                    else if(IndexTestRide < 100){
                        IndexTestRideNo = '00' + String.valueOf(IndexTestRide);
                    }
                    else if(IndexTestRide < 1000){
                        IndexTestRideNo = '0' + String.valueOf(IndexTestRide);
                    }
                    item.Payment_Code__c  = 'PT-' + PaymentType + '-' + dodlName + String.valueOf(Year).right(2) + MonthNo + '-' + IndexTestRideNo;
                }
            }
        }
    }
    public static void onAfterInsert(List<Payment__c> payments) {
        List<Payment__c> paymentsDeposit = new List<Payment__c>();
        Set<Id> setIdOrder = new Set<Id>();
        for(Payment__c item : payments) {
            if(item.Order__c != Null && item.Payment_Type__c != Null && item.Payment_Term__c != Null) {
                paymentsDeposit.add(item);
                setIdOrder.add(item.Order__c);
            }
        }
        updateIsPaymentOnOrder(paymentsDeposit, setIdOrder);
        updateTotalAmountOrder(setIdOrder);
    }

    public static void onAfterUpdate(Map<Id, Payment__c> mapOld, Map<Id, Payment__c> mapNew) {	
        List<Payment__c> lstPaymentDeposit = new List<Payment__c>();
        Set<Id> setIdOrder = new Set<Id>();
        Set<Id> setIdOrderNew = new Set<Id>();
        for(Payment__c item : mapNew.values()) {
            if((mapOld.get(item.Id).Payment_Type__c != mapNew.get(item.Id).Payment_Type__c 
                || mapOld.get(item.Id).Payment_Term__c != mapNew.get(item.Id).Payment_Term__c 
                || mapOld.get(item.Id).Order__c != mapNew.get(item.Id).Order__c) 
               && item.Order__c != Null) {
                lstPaymentDeposit.add(item);
                setIdOrder.add(item.Order__c);
            }
            if(item.Order__c != Null){
                setIdOrderNew.add(item.Order__c);
            }
        }
        updateIsPaymentOnOrder(lstPaymentDeposit, setIdOrder);
        updateTotalAmountOrder(setIdOrderNew);
    }

    private static void updateIsPaymentOnOrder(List<Payment__c> payments, Set<Id> ordersID) {
        try {
            Map<Id, Order> ordersUpdated = new Map<Id, Order>([SELECT ID, Is_Payment__c FROM Order WHERE Id IN: ordersID]);
            Map<Id, List<Payment__c>> orderIDPayments = new Map<Id, List<Payment__c>>();
            for (Payment__c item : payments){
                if (!orderIDPayments.containsKey(item.Order__c))
                orderIDPayments.put(item.Order__c, new List<Payment__c>());
                orderIDPayments.get(item.Order__c).add(item);
            }
            for(Order item : ordersUpdated.values()) {
                if(orderIDPayments.containsKey(item.Id)) {
                    for(Payment__c obj : orderIDPayments.get(item.Id)) {
                        if(obj.Payment_Type__c == 'Deposit' && obj.Payment_Term__c != 'Refund Overcharge' && !ordersUpdated.get(obj.Order__c).Is_Payment__c) {
                            ordersUpdated.get(obj.Order__c).Is_Payment__c = true;
                        } else if(obj.Payment_Type__c == 'Deposit' && obj.Payment_Term__c == 'Refund Overcharge') {
                            ordersUpdated.get(obj.Order__c).Is_Payment__c = false;
                            break;
                        }
                    }
                }
            }
            update ordersUpdated.values();
        } catch(Exception ex) {
            payments[0].addError(ex.getMessage() + ' ' + ex.getLineNumber());
        }
    }
    
    private static void updateTotalAmountOrder(Set<Id> ordersID){
        List<Order> ordersUpdated = new List<Order>();        
        List<Payment__c> payments = [SELECT Id, Amount__c, Order__c, Stage__c FROM Payment__c
                                     WHERE Order__c in: ordersID AND Stage__c != 'Cancelled '];
        
        for(Order item: [SELECT Id, Paid_Amount__c FROM Order WHERE Id =: ordersID]){
            item.Paid_Amount__c  = 0 ;
            for(Payment__c itemPayment: payments)
                if(itemPayment.Order__c == item.Id) item.Paid_Amount__c += itemPayment.Amount__c ;
            
            ordersUpdated.add(item);
        }
        update ordersUpdated;
    }
    
