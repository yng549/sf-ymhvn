    @AuraEnabled
    public static APIResponse searchVoucherByKeyInput(String strSearchKey, String recordId){
        APIResponse apiResponse = new APIResponse();
        List<OrderItem> lstOrderItem = new List<OrderItem>();
        Order objOrder = getOrderById(recordId);
        try {
            if(!String.isNotBlank(strSearchKey)) {
                apiResponse.error = 'Please input value keyword to searching.';
                return apiResponse;
            }
            Voucher__c[] objVoucher = [SELECT Id
                                            , Name
                                            , Voucher_Name__c
                                            , IMEI__c
                                            , Campaign__c
                                            , Campaign__r.Promotion_Item__c
                                            , Valid_From__c
                                            , Valid_To__c
                                            , Voucher_Status__c
                                            , RecordTypeId
                                            , RecordType.Name 
                                            , Redeem_Date__c
                                            , Is_Applied__c
                                            , Campaign__r.Name 
                                            , Amount__c
                                            , Campaign__r.Promotion_Item__r.Name
                                            , Service_Apply__c
                                    FROM Voucher__c
                                    WHERE IMEI__c =: strSearchKey 
                                        AND (RecordTypeId =: RecordTypeHelper.VOUCHER_CASH 
                                            OR RecordTypeId =: RecordTypeHelper.VOUCHER_NEW_BIKE)];

            if(objVoucher.isEmpty()) {
                apiResponse.error = 'Voucher Imei is not exits..';
                return apiResponse;
            }
            //if(objVoucher[0].Valid_From__c <= Date.today() && objVoucher[0].Valid_To__c <= Date.today()) {
            if(objVoucher[0].Valid_From__c <= Date.today() && objVoucher[0].Valid_To__c < Date.today()) {
                apiResponse.error = 'Voucher was expired.';
                return apiResponse;
            }
            if(objVoucher[0].Voucher_Status__c == 'Redeemed') {
                apiResponse.error = 'Voucher was used.';
                return apiResponse;
            }
            if(objVoucher[0].Service_Apply__c == Null) {
                apiResponse.error = 'Voucher do not set value for service apply.';
                return apiResponse;
            }
            lstOrderItem = getListOrderItem(recordId);
            if(lstOrderItem.isEmpty()) {
                apiresponse.error = 'Do not any product item on order.';
                return apiresponse;
            }
            Decimal totalAmount = 0;
            Decimal discountAmount = 0;
            for(OrderItem item : lstOrderItem) {
                if(objVoucher[0].Service_Apply__c.contains('PCA') 
                    && item.Product2.RecordTypeId == RecordTypeHelper.PRODUCT_PCA) {
                    // && item.Product2.Is_Genuine__c) {
                    totalAmount += item.TotalPrice != Null ? item.TotalPrice : totalAmount;
                }
                if(objVoucher[0].Service_Apply__c.contains('Service') && item.Product2.RecordTypeId == RecordTypeHelper.SV_JOB) {
                    totalAmount += item.TotalPrice != Null ? item.TotalPrice : totalAmount;
                }
            }
            if(totalAmount <= objVoucher[0].Amount__c) {
                discountAmount = totalAmount;
            } else if(totalAmount > objVoucher[0].Amount__c) {
                discountAmount = objVoucher[0].Amount__c;
            }
            objVoucherDTO voucherDTO = new objVoucherDTO(objVoucher[0], discountAmount);
            if(apiResponse.error == Null) {
                apiResponse.success = true;
                apiResponse.result = voucherDTO;
            }
            return apiResponse;
        } catch (Exception e) {
            apiResponse.error = e.getMessage() + ' ' + e.getLineNumber();
            return apiResponse;
        }
    }


    @AuraEnabled
    public static APIResponse createPaymentForOrder(objVoucherDTO objVoucherDTO, String recordId){
        APIResponse apiresponse = new APIResponse();
        List<OrderItem> lstOrderItem = new List<OrderItem>();
        Order objOrder = getOrderById(recordId);
        try {
            lstOrderItem = getListOrderItem(recordId);
            if(lstOrderItem.isEmpty()) {
                apiresponse.error = 'Do not any product item on order.';
                return apiresponse;
            }
            Decimal totalAmount = 0;
            for(OrderItem item : lstOrderItem) {
                if(objVoucherDTO.ServiceApply.contains('PCA') 
                    && item.Product2.RecordTypeId == RecordTypeHelper.PRODUCT_PCA) {
                    // item.Product2.Is_Genuine__c
                    totalAmount += item.TotalPrice != Null ? item.TotalPrice : totalAmount;
                }
                if(objVoucherDTO.ServiceApply.contains('Service') && item.Product2.RecordTypeId == RecordTypeHelper.SV_JOB) {
                    totalAmount += item.TotalPrice != Null ? item.TotalPrice : totalAmount;
                }
            }
            if(totalAmount == 0) {
                apiresponse.error = 'Total value is 0.';
                return apiresponse;
            }
            Payment__c payment = new Payment__c();
            payment.Payment_Date__c = Datetime.now();
            payment.Payment_Term__c = 'Voucher';
            payment.Payment_Type__c = 'Pay Balance';
            payment.Account__c = objOrder.AccountId;
            payment.Order__c = recordId;
            Payment.Opportunity__c = String.isNotBlank(objOrder.OpportunityId) 
                                    ? objOrder.OpportunityId 
                                    : objOrder.DO_DL__r.Opportunity_Fixed__c;
            if(totalAmount <= objVoucherDTO.Amount) {
                payment.Amount__c = totalAmount;
            } else if(totalAmount > objVoucherDTO.Amount) {
                payment.Amount__c = objVoucherDTO.Amount;
            }
            insert payment;

            Voucher__c objVoucher = new Voucher__c(
                Id = objVoucherDTO.Id,
                Redeem_Date__c = Datetime.now(),
                Voucher_Status__c = 'Redeemed',
                Order__c = recordId
            );
            upsert objVoucher;

            if(apiresponse.error == Null) {
                apiresponse.success = true;
            }
            return apiresponse;
        } catch(Exception ex) {
            apiresponse.error = ex.getMessage() + ' ' + ex.getLineNumber();
            return apiresponse;
        }
    }

    private static Order getOrderById(String recordId) {
        return [SELECT Id
                    , AccountId
                    , OpportunityId
                    , DO_DL__r.Opportunity_Fixed__c 
                FROM Order 
                WHERE Id =: recordId];
    }

    private static List<OrderItem> getListOrderItem(String recordId) {
        return new List<OrderItem> ([SELECT Id
                                            , UnitPrice
                                            , Quantity
                                            , TotalPrice
                                            , Product2.RecordTypeId
                                            , Product2.Is_Genuine__c
                                    FROM OrderItem
                                    WHERE OrderId =: recordId]);
    }


